
{% extends 'base.html.twig' %}
{% block title %}Homepage!{% endblock %}

{% block body %}
            {% if is_granted('ROLE_USER') %}

                <h2>You are logged in:</h2>

                <div class="row">
                    <div class="col-sm-3"><b>Email:</b> </div><div class="col-sm-6">{{ app.user.email }}</div>
                </div>
                <div class="row">
                    <div class="col-sm-3"><b>Username:</b> </div><div class="col-sm-6">{{ app.user.username }}</div>
                </div>
                <div class="row">
                    <div class="col-sm-3"><b>LastLogin:</b> </div><div class="col-sm-6">{{ app.user.lastLoginSuccess | date("m/d/Y H:i") }}</div>
                </div>
                <br />
                <div class="row text-right">
                    <div class="col-sm-12">
                        <p><a href="{{ path('app_logout') }}" class="btn btn-secondary">Logout</a></p>
                    </div>
                </div>

            {% else %}

                <div class="row text-center">
                    <div class="col-sm-12">
                        <a href="{{ path('user_registration') }}" class="btn btn-primary">Register</a>
                         or
                        <a href="{{ path('app_login') }}" class="btn btn-secondary">Login</a>
                    </div>
                </div>
            {% endif %}
{% endblock %}